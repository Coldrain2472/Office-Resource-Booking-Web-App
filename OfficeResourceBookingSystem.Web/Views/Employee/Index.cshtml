@using OfficeResourceBookingSystem.Web.Models.Employee
@model EmployeeListViewModel

@{
    ViewData["Title"] = "Employee List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Employees</h2>
        <span class="badge bg-primary fs-6">Total: @Model.TotalCount</span>
    </div>

    @if (Model.Employees != null && Model.Employees.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Actions</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <th scope="row">@employee.EmployeeId</th>
                            <td>@employee.FullName</td>
                            <td>@employee.EmailAddress</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="ChangeName" asp-route-employeeId="@employee.EmployeeId" class="btn btn-outline-primary">Change Name</a>
                                    <a asp-action="ChangeEmail" asp-route-employeeId="@employee.EmployeeId" class="btn btn-outline-secondary">Change Email</a>
                                    <a asp-action="ReservationHistory" asp-route-employeeId="@employee.EmployeeId" class="btn btn-outline-info">History</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No employees found.</div>
    }
</div>
