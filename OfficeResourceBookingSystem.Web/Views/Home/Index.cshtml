@using OfficeResourceBookingSystem.Web.Models.Reservation
@model InactiveReservationsListViewModel

@{
    ViewData["Title"] = "Inactive Reservations";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Inactive Reservations</h2>
        <span class="badge bg-secondary fs-6">Total: @Model.TotalCount</span>
    </div>

    @if (Model.InactiveReservations != null && Model.InactiveReservations.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Created By</th>
                        <th scope="col">Resource</th>
                        <th scope="col">Purpose</th>
                        <th scope="col">Participants</th>
                        <th scope="col">Start Time</th>
                        <th scope="col">End Time</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.InactiveReservations)
                    {
                        <tr>
                            <th scope="row">@reservation.ReservationId</th>
                            <td>@reservation.CreatedByName</td>
                            <td>@reservation.ReservedResourceName</td>
                            <td>@reservation.Purpose</td>
                            <td>@reservation.ParticipantsCount</td>
                            <td>@reservation.StartTime.ToString("g")</td>
                            <td>@reservation.EndTime.ToString("g")</td>
                            <td>
                                <span class="badge bg-secondary">Inactive</span>
                            </td>
                            <td>@reservation.CreatedAt.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No inactive reservations found.</div>
    }
</div>
