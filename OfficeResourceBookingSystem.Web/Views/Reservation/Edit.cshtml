@model OfficeResourceBookingSystem.Web.Models.Reservation.EditReservationViewModel

@{
    ViewData["Title"] = "Edit Reservation";
}

<h2>Edit Reservation</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReservationId" />

    <div class="mb-3">
        <label asp-for="Purpose" class="form-label"></label>
        <input asp-for="Purpose" class="form-control" />
        <span asp-validation-for="Purpose" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ParticipantsCount" class="form-label"></label>
        <input asp-for="ParticipantsCount" class="form-control" type="number" min="1" />
        <span asp-validation-for="ParticipantsCount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndTime" class="form-label"></label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
